<Ads formatVersion='3' target='Avito.ru'>
    {% for product in products|filter(v => v.product_price > 0) %}


        {% set tags = element_transform(product) %}

        {% if tags is not null %}
            <Ad>
            {% for tag, data in tags %}
                <{{ tag }}>
                    {{ data|raw }}
                </{{ tag }}>
            {% endfor %}
            </Ad>
        {% endif %}

    {% endfor %}
</Ads>
